{
  "name": "xml-tree-viewer",
  "displayName": "XML Tree Viewer",
  "description": "Visualize XML and DTD files as interactive structures with parsed tree, JSON object, Mermaid diagram, split view, and DTD-to-XML preview",
  "version": "0.0.3",
  "publisher": "AnishMiyaAnsari",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anishansari/xml-tree-viewer"
  },
  "bugs": {
    "url": "https://github.com/anishansari/xml-tree-viewer/issues"
  },
  "homepage": "https://github.com/anishansari/xml-tree-viewer#readme",
  "keywords": [
    "xml",
    "dtd",
    "tree",
    "viewer",
    "visualizer",
    "mermaid",
    "diagram",
    "parser",
    "structure",
    "hierarchy",
    "formatter"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:dtd"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xmlTreeViewer.openTreeView",
        "title": "XML Tree Viewer: Open Tree View",
        "icon": "$(list-tree)"
      },
      {
        "command": "xmlTreeViewer.refreshSidebar",
        "title": "XML Tree Viewer: Refresh Sidebar",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .xml || resourceExtname == .dtd",
          "command": "xmlTreeViewer.openTreeView",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .xml || resourceExtname == .dtd",
          "command": "xmlTreeViewer.openTreeView",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "xmlTreeViewer.refreshSidebar",
          "when": "view == xmlTreeViewerSidebar",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xmlTreeViewer",
          "title": "XML Tree Viewer",
          "icon": "images/tree-icon.svg"
        }
      ]
    },
    "views": {
      "xmlTreeViewer": [
        {
          "id": "xmlTreeViewerSidebar",
          "name": "XML Structure",
          "contextualTitle": "XML Tree Viewer",
          "icon": "images/tree-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-webpack",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch:webpack": "webpack --watch --mode development --devtool source-map",
    "package-webpack": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.3",
    "webpack": "^5.105.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "typesxml": "^1.17.0"
  }
}
